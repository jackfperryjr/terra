@model Terra.Models.Characters
@{
    ViewData["Title"] = "| Edit";
}
@section Styles {
    <link href="@Url.Content("~/css/site.css")" rel="stylesheet" type="text/css" />
}
<h2 class="top-buffer">edit character</h2>
@if (@TempData["Status"] != null) {
<div id="edit-success-container" class='@TempData["ClassName"]' style='@TempData["ContainerHeight"]'>
    <span onclick="hideSuccess()" class='pull-right' style='cursor: pointer; color: #fff; font-size: 28px; padding-right: 10px;'>X</span>
    <h3 class='text-center' style='margin: auto; padding: 5px;'>@TempData["Message"]</h3>
</div>
}
<hr />
<form asp-action="Edit" enctype="multipart/form-data">
    <div class="add-edit-list">
        <div class="row">
                <div class="img-container">
                    <label>
                        <img id="img-output" class="img-character" asp-route-id="@Model.Id" src="@Model.Picture" alt="@Model.Name" title="@Model.Name" />
                        <input asp-for="Picture" id="img-input" type="file" accept="image/*" name="picture" style="display:none;" />
                    </label>
                <h5>click to change image</h5>
                <span asp-validation-for="Picture" class="text-danger"></span>
                </div>
                <div class="row" style="margin:10px -15px 10px -15px;">
                    <div class="col-xs-6" style="margin:0;">
                        <div class="input-group" style="height:100px;width:100px;">
                            <label>
                                <img id="img-output2" style="height:100px;width:100px;cursor:pointer;" src="@Model.Picture2" />
                                <input asp-for="Picture2" id="img-input2" type="file" accept="image/*" name="picture" style="display:none;" />
                            </label>
                            <span asp-validation-for="Picture2" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-xs-6" style="margin:0;">
