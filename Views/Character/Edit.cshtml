                <div class="form-group" style="margin-bottom:0 !important;">
                    <input asp-for="Response10" class="login-bar login-picture" placeholder="Dating profile response"/>
                    <span asp-validation-for="Response10" class="text-danger"></span>
                </div>
                <span class="font-10 label-under">dating response</span>
            </div>
            <div id="desc-position" class="col-md-6">
                <div class="form-group" style="margin-bottom:0 !important;">
                    <textarea id="desc-input" asp-for="Description" class="login-bar" placeholder="Enter a character description in this space" title="Enter a character description in this space" ></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <span class="font-10 label-under">character description</span>
                <div class="form-group" style="margin-bottom:0 !important;">
                    <textarea id="desc-input" asp-for="Response1" class="login-bar" placeholder="Enter a character dating profile in this space" title="Enter a character dating profile in this space" ></textarea>
                    <span asp-validation-for="Response1" class="text-danger"></span>
