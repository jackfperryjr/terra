@model Terra.Models.Character
@{
    ViewData["Title"] = "| Add";
}
@section Styles {
    <link href="@Url.Content("~/css/site.css")" rel="stylesheet" type="text/css" />
}
<h2 class="top-buffer">add a new character</h2>
<hr />
<form asp-action="Create" enctype="multipart/form-data">
    <div class="add-edit-list">
        <div class="row">
            <div lass="img-container">
                <label>
                    <img id="img-output1" class="img-character" src="~/icons/default-avatar.png" />
                    <input asp-for="Pictures" id="img-input1" type="file" accept="image/*" name="picture" style="display:none;" />
                </label>
                <span asp-validation-for="Pictures" class="text-danger"></span>
            </div>
            <div class="row" style="margin:10px -15px 10px -15px;">
                <div class="col-xs-3" style="margin:0 0 0 -15px;">
                    <div class="input-group character-img-small">
                        <label>
                            <img id="img-output2" src="~/icons/default-avatar.png" />
                            <input asp-for="Pictures" id="img-input2" type="file" accept="image/*" name="picture" style="display:none;" />
                        </label>
                        <span asp-validation-for="Pictures" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xs-3" style="margin:0;">
                    <div class="input-group character-img-small">
                        <label>
                            <img id="img-output3" src="~/icons/default-avatar.png" />
                            <input asp-for="Pictures" id="img-input3" type="file" accept="image/*" name="picture" style="display:none;" />
                        </label>
                        <span asp-validation-for="Pictures" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xs-3" style="margin:0;">
                    <div class="input-group character-img-small">
                        <label>
                            <img id="img-output4" src="~/icons/default-avatar.png" />
                            <input asp-for="Pictures" id="img-input4" type="file" accept="image/*" name="picture" style="display:none;" />
                        </label>
                        <span asp-validation-for="Pictures" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xs-3" style="margin:0;">
                    <div class="input-group character-img-small">
                        <label>
                            <img id="img-output5" src="~/icons/default-avatar.png" />
                            <input asp-for="Pictures" id="img-input5" type="file" accept="image/*" name="picture" style="display:none;" />
                        </label>
                        <span asp-validation-for="Pictures" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" style="margin-bottom:0 !important;">
                    <select asp-for="Origin" class="login-bar login-picture">
                        <option value="Final Fantasy 01">Final Fantasy 01</option>
                        <option value="Final Fantasy 02">Final Fantasy 02</option>
                        <option value="Final Fantasy 03">Final Fantasy 03</option>  
                        <option value="Final Fantasy 04">Final Fantasy 04</option>
                        <option value="Final Fantasy 05">Final Fantasy 05</option>
                        <option value="Final Fantasy 06">Final Fantasy 06</option>
                        <option value="Final Fantasy 07">Final Fantasy 07</option>
                        <option value="Final Fantasy 08">Final Fantasy 08</option>
                        <option value="Final Fantasy 09">Final Fantasy 09</option>
                        <option value="Final Fantasy 10">Final Fantasy 10</option>
                        <option value="Final Fantasy 10-2">Final Fantasy 10-2</option>
                        <option value="Final Fantasy 11">Final Fantasy 11</option>
                        <option value="Final Fantasy 12">Final Fantasy 12</option>
                        <option value="Final Fantasy 13">Final Fantasy 13</option>
                        <option value="Final Fantasy 13-2">Final Fantasy 13-2</option>
                        <option value="Final Fantasy 14">Final Fantasy 14</option>
                        <option value="Final Fantasy 15">Final Fantasy 15</option>
                        <option value="Final Fantasy BE">Final Fantasy Brave Exvius</option>
                    </select>
                    <span asp-validation-for="Origin" class="text-danger"></span>
                </div>
                <span class="font-10 label-under">game</span>
                <div class="form-group" style="margin-bottom:0 !important;">
                    <select asp-for="Gender" class="login-bar login-picture">
                        <option>Enter character gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="??">??</option>                    
                    </select>                
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <span class="font-10 label-under">gender</span>
                <div class="form-group" style="margin-bottom:0 !important;">
                    <input asp-for="Name" class="login-bar login-picture" placeholder="Enter character name"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <span class="font-10 label-under">name</span>
                <div class="form-group" style="margin-bottom:0 !important;">
                    <input asp-for="Race" class="login-bar login-picture" placeholder="Enter character race"/>
                    <span asp-validation-for="Race" class="text-danger"></span>
                </div>
                <span class="font-10 label-under">race</span>
                <div class="form-group" style="margin-bottom:0 !important;">
                    <input asp-for="Age" class="login-bar login-picture" placeholder="Enter character age"/>
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
                <span class="font-10 label-under">age</span>
                <div class="form-group" style="margin-bottom:0 !important;">
                    <input asp-for="Job" class="login-bar login-picture" placeholder="Enter character class or job"/>
                    <span asp-validation-for="Job" class="text-danger"></span>
                </div>
                <span class="font-10 label-under">class/job</span>
                <div class="form-group" style="margin-bottom:0 !important;">
                    <input asp-for="Height" class="login-bar login-picture" placeholder="Enter height in meters"/>
                    <span asp-validation-for="Height" class="text-danger"></span>
                </div>
                <span class="font-10 label-under">height</span>
                <div class="form-group" style="margin-bottom:0 !important;">
                    <input asp-for="Weight" class="login-bar login-picture" placeholder="Enter weight in kilograms"/>
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>
                <span class="font-10 label-under">weight</span>

                <div class="form-group" style="margin-bottom:0 !important;">
                    <textarea id="desc-input" asp-for="Description" class="login-bar" placeholder="Enter a character description in this space" title="Enter a character description in this space" ></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <span class="font-10 label-under">character description</span>
            </div>
            <div class="col-md-6">
                <div class="form-group" style="margin-bottom:0 !important;">
                    <textarea id="desc-input" asp-for="DatingProfile.Bio" class="login-bar" placeholder="Enter a character dating profile in this space" title="Enter a character dating profile in this space" ></textarea>
                    <span asp-validation-for="DatingProfile.Bio" class="text-danger"></span>
                </div>
                <span class="font-10 label-under">dating profile</span>
                <div class="form-group" style="margin-bottom:0 !important;">
                    <input asp-for="DatingProfile.Responses" class="login-bar login-picture" placeholder="Dating profile response"/>
                    <span asp-validation-for="DatingProfile.Responses" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="add-edit-list">
        <div class="form-group top-buffer">
            <button class="btn btn-link far fa-times-circle edit-cancel yellow" asp-controller="Character" asp-action="Index"></button>
            <button type="submit" class="btn btn-link far fa-check-circle edit-save blue"></button>
        </div>
    </div>
</form>